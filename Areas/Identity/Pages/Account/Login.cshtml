@page
@model LoginModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Log in";
}


<style>
    .background {
        background-image: linear-gradient(to right, #1A3B61, #8AB5E6)
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Dragon Tracker</title>
    <link rel="icon" type="image/x-icon" href="~/Images/favicon-16x16.png" /favicon.ico" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <link href="~/Template/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Template/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!--  BEGIN CUSTOM STYLE FILE  -->
    <link href="~/Template/assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />
    <link href="~/Template/assets/css/components/custom-carousel.css" rel="stylesheet" type="text/css" />
    <link href="~/Template/assets/css/components/cards/card.css" rel="stylesheet" type="text/css" />
    <!--  END CUSTOM STYLE FILE  -->

    <link href="~/Custom CSS/simplestyle.css" rel="stylesheet" />
</head>
<body class="background">



    <!--  BEGIN MAIN CONTAINER  -->
    <!--  BEGIN CONTENT AREA  -->

    <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-md-6">
                <form id="account" method="post" novalidate="novalidate">
                    <h1 class="text-center font-weight-bolder">
                        Sign in
                    </h1>
                    <br />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter your Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control"  placeholder="Enter your Password"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <div class="row justify-content-center align-items-center">
        <div class="col-2">
            <div class="card component-card_3">
                <div class="card-body">

                    <h5 class="card-user_name">Admin</h5>
                    <hr />
                    <ul>
                        <li class="card-text">Full access to Dragon Tracker.</li>
                        <li class="card-text">Manage users, ticket, projects.</li>
                    </ul>
                    <hr />
                    <form id="account" method="post">
                        <div class="form-group">
                            <button type="submit" name="demoEmail" value="DemoAdminEmail" class="btn btn-light" style="max-height:250px; max-width:250px;">Demo Admin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="card component-card_3">
                <div class="card-body">

                    <h5 class="card-user_name">Project Manager</h5>
                    <hr />
                    <ul>
                        <li class="card-text">Manage assigned projects and tickets.</li>
                        <li class="card-text">Assign users to projects and roles.</li>
                    </ul>
                    <hr />
                    <form id="account" method="post">
                        <div class="form-group">
                            <button type="submit" name="demoEmail" value="DemoProjectManagerEmail" class="btn btn-light" style="max-height:250px; max-width:250px;">Demo Project Manager</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="card_3" class="col-2">
            <div class="card component-card_3">
                <div class="card-body">

                    <h5 class="card-user_name">Developer</h5>
                    <hr />
                    <ul>
                        <li class="card-text">be assigned tickets, change ticket status.</li>
                        <li class="card-text">add attachments to assigned tickets.</li>
                    </ul>
                    <hr />
                    <form id="account" method="post">
                        <div class="form-group">
                            <button type="submit" name="demoEmail" value="DemoDeveloperEmail" class="btn btn-light">Demo Developer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="card_3" class="col-2">
            <div class="card component-card_3 shadow-lg">
                <div class="card-body">

                    <h5 class="card-user_name">Submitter</h5>
                    <hr />
                    <ul>
                        <li class="card-text">submit and edit tickets to projects.</li>
                        <li class="card-text">create attachments and comments.</li>
                    </ul>
                    <hr />
                    <form id="account" method="post">
                        <div class="form-group">
                            <button type="submit" name="demoEmail" value="DemoSubmitterEmail" class="btn btn-light">Demo Submitter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="card_3" class="col-2">
            <div class="card component-card_3">
                <div class="card-body">

                    <h5 class="card-user_name">New User</h5>
                    <hr />
                    <ul>
                        <li class="card-text">No access to functionality or make changes.</li>
                        <li class="card-text">explore with a newly created account.</li>
                    </ul>
                    <hr />
                    <form id="account" method="post">
                        <div class="form-group">
                            <button type="submit" name="demoEmail" value="DemoNewUserEmail" class="btn btn-light">Demo New User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>







    <!-- END MAIN CONTAINER -->
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <script src="~/Template/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="~/Template/bootstrap/js/popper.min.js"></script>
    <script src="~/Template/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Template/plugins/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Template/plugins/blockui/jquery.blockUI.min.js"></script>
    <script src="~/Template/assets/js/app.js"></script>

    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>
    <script src="~/Template/plugins/highlight/highlight.pack.js"></script>
    <script src="~/Template/assets/js/custom.js"></script>
    <!-- END GLOBAL MANDATORY STYLES -->
    <script src="~/Template/assets/js/scrollspyNav.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />







    }
</body>
</html>













