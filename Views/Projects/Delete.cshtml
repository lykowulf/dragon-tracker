                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                        }
                                        <br />

                                        <form asp-controller="Projects" asp-action="Index">

                                            <button class="btn btn-primary">Back to Projects</button>
                                        </form>
