@using Microsoft.AspNetCore.Identity

@inject SignInManager<BTUser> SignInManager
@inject UserManager<BTUser> UserManager

<head>
    <link href="~/Custom CSS/loginpartial.css" rel="stylesheet" />
</head>
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark userNameColor" asp-area="Identity" asp-page="/Account/Manage/Index"  title="Manage">@UserManager.GetUserAsync(User).Result.FirstName</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("LandingPage", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link  btn btn-light color logout">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
